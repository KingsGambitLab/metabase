{
  "name": "embedding-sdk-utility-package",
  "description": "This package.json exists only to provide a way to have a local place for all sdk related scripts",
  "scripts": {
    "build": "yarn --cwd install && yarn --cwd ../ build-release:cljs && yarn generate-package && yarn build-release:sdk && yarn build-cli && yarn fixup-types-imports",
    "build-release": "cd ../ WEBPACK_BUNDLE=production webpack --config webpack.embedding-sdk.config.js",
    "build:pure": "cd ../WEBPACK_BUNDLE=development webpack --config webpack.embedding-sdk.config.js",
    "build:watch": "yarn generate-package && yarn build:pure --watch",
    "build-cli": "webpack --config webpack.embedding-sdk-cli.config.js",
    "build-cli:watch": "yarn build-cli --watch",
    "fixup-types-imports": "node ../bin/embedding-sdk/fixup-types-after-compilation.js",
    "generate-package": "node ../bin/embedding-sdk/generate-sdk-package-files.js",
    "generate-changelog": "yarn --cwd ../ conventional-changelog -p angular --pkg enterprise/frontend/src/embedding-sdk/package.template.json --config enterprise/frontend/src/embedding-sdk/conventional-changelog-config.js --tagPrefix embedding-sdk-",
    "publish": "cd ../resources/embedding-sdk && npm publish",
    "test-unit": "yarn test-unit enterprise/frontend/src/embedding-sdk/",
    "tsc": "tsc --project ../tsconfig.sdk.json",
    "clean": "rm -rf ../resources/embedding-sdk/dist && rm -rf ../resources/embedding-sdk/.tsbuildinfo",
    "==DEV==": "",
    "//": "experimental command that should be faster",
    "dev": "concurrently -n 'tsc,webpack,fix-types' -c 'blue,green,yellow' 'npm:dev:dts' 'npm:dev:webpack' 'npm:dev:fixup'",
    "dev:dts": "yarn tsc --watch --preserveWatchOutput",
    "dev:webpack": "SKIP_DTS=true yarn --cwd ../ build-watch",
    "dev:fixup": "yarn fixup-types-imports --watch",
    "==storybook==": "",
    "storybook": "yarn build:cljs && IS_EMBEDDING_SDK=true start-storybook -p 6006",
    "build-storybook": "NODE_OPTIONS=--max-old-space-size=8196 IS_EMBEDDING_SDK=true build-storybook --quiet"
  }
}